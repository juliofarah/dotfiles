set nocompatible
filetype off

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
set foldmethod=manual
call vundle#begin()

source $HOME/dev/dotfiles/vim/config/plugins.vimrc
source $HOME/dev/dotfiles/vim/config/ctrlp.config.vimrc
source $HOME/dev/dotfiles/vim/config/gui.vimrc
source $HOME/dev/dotfiles/vim/config/keys.vimrc
source $HOME/dev/dotfiles/vim/config/rainbow-parentheses.config.vimrc
source $HOME/dev/dotfiles/vim/config/vim-test.config.vimrc
source $HOME/dev/dotfiles/vim/config/syntastic.config.vimrc

call vundle#end()
filetype plugin indent on


